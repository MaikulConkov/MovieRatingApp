<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieRatingApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MovieRatingApplication.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#545454">

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="hometab"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage"/>
        <ShellContent
        Title="Rated"
        Icon="rate"
        ContentTemplate="{DataTemplate pages:RatedMovies}"
        Route="MainPage1"/>
        <ShellContent
        Title="Search"
        Icon="search"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage2"/>
    </TabBar>
</Shell>
